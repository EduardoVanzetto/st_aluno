<p id="notice"><%= notice %></p>

<h1>Pais</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Rg</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pais.each do |pal| %>
      <tr>
        <td><%= pal.nome %></td>
        <td><%= pal.cpf %></td>
        <td><%= pal.rg %></td>
        <td><%= link_to 'Show', pal %></td>
        <td><%= link_to 'Edit', edit_pal_path(pal) %></td>
        <td><%= link_to 'Destroy', pal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

